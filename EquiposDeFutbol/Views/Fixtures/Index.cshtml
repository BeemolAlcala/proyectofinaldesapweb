@model IEnumerable<EquiposDeFutbol.Models.Fixtures>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FixtureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FixtureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeamID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeamID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FixtureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FixtureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competition.CompetitionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FixtureID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FixtureID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FixtureID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
